<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:navigationBarColor">@color/material_red_700</item>
  </style>

  <style name="AppTheme.NoActionBar" parent="AppTheme">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.NoActionBar.FullScreen" parent="AppTheme.NoActionBar">
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="CustomRadioButton" parent="@style/Base.Widget.AppCompat.CompoundButton.RadioButton">
    <item name="android:button">@drawable/radio_button_icon</item>
    <item name="android:animateLayoutChanges">true</item>
  </style>

  <style name="EditTextField">
    <item name="android:textSize">16.0sp</item>
    <item name="android:textColor">@drawable/edittextbox_text_color</item>
    <item name="android:textColorHint">@color/colorTextHintText</item>
    <item name="android:ellipsize">end</item>
  </style>
</resources>
