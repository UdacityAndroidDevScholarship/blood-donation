<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <import type="com.udacity.nanodegree.blooddonation.util.Util"/>
    <variable
        name="userDetail"
        type="com.udacity.nanodegree.blooddonation.ui.userdetail.model.UserDetail"
        />
    <variable
        name="presenter"
        type="com.udacity.nanodegree.blooddonation.ui.userdetail.UserDetailContract.Presenter"
        />
  </data>
  <android.support.design.widget.CoordinatorLayout
      android:id="@+id/coordinator_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/user_details_action_button_height"
        android:clipToPadding="false"
        >
      <android.support.constraint.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:context=".UserDetailsActivity"
          >

        <ProgressBar
            android:id="@+id/pb_user_details_photo_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_space_small"
            android:layout_marginEnd="@dimen/default_space_small"
            android:layout_marginStart="@dimen/default_space_small"
            android:layout_marginTop="@dimen/default_space_small"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/civ_user_details_profile_image"
            app:layout_constraintEnd_toEndOf="@+id/civ_user_details_profile_image"
            app:layout_constraintStart_toStartOf="@+id/civ_user_details_profile_image"
            app:layout_constraintTop_toTopOf="@+id/civ_user_details_profile_image"
            style="?android:attr/progressBarStyle"
            />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_user_details_choose_profile_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_space_small"
            android:layout_marginStart="@dimen/default_space_small"
            android:layout_marginTop="64dp"
            android:background="?attr/selectableItemBackground"
            android:onClick="@{() -> presenter.onPickPhotoClick()}"
            app:fabSize="mini"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/civ_user_details_profile_image"
            app:srcCompat="@drawable/ic_add_white_24dp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_user_details_profile_image"
            android:layout_width="@dimen/default_space_100"
            android:layout_height="@dimen/default_space_100"
            android:layout_marginEnd="@dimen/default_space_small"
            android:layout_marginStart="@dimen/default_space_small"
            android:layout_marginTop="@dimen/default_space_small"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:photoPicked="@{userDetail.isPhotoPicked}"
            app:userGender="@{userDetail.isMale}"
            tools:src="@drawable/ic_gender_male"
            />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_user_details_full_name"
            android:layout_width="@dimen/default_space_none"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_space_small"
            android:layout_marginEnd="@dimen/default_space_small"
            android:layout_marginStart="@dimen/default_space_small"
            android:layout_marginTop="@dimen/default_space_small"
            app:layout_constraintBottom_toTopOf="@+id/tv_user_details_label_gender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fab_user_details_choose_profile_photo"
            style="@style/Widget.Design.TextInputLayout"
            >

          <android.support.design.widget.TextInputEditText
              android:id="@+id/tiet_user_details_full_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/user_details_full_name"
              android:inputType="text|textPersonName"
              android:singleLine="true"
              app:binding="@{userDetail.fullName}"
              style="@style/EditTextField"
              />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/tv_user_details_label_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_space_small"
            android:layout_marginStart="@dimen/default_space_small"
            android:layout_marginTop="@dimen/default_space_small"
            android:paddingLeft="@dimen/default_space_tiny"
            android:text="@string/user_details_gender"
            android:textColorHint="#ff9e9e9e"
            android:textSize="@dimen/user_details_text_gender_label"
            app:layout_constraintBottom_toTopOf="@+id/rg_user_details_select_gender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_user_details_full_name"
            />
        <RadioGroup
            android:id="@+id/rg_user_details_select_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_space"
            android:layout_marginLeft="@dimen/default_space_small"
            android:layout_marginStart="@dimen/default_space_small"
            android:layout_marginTop="@dimen/default_space_small"
            android:orientation="horizontal"
            app:binding="@{userDetail.isMale}"
            app:layout_constraintBottom_toTopOf="@+id/rl_user_profile_birthday"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_details_label_gender"
            >
          <android.support.v7.widget.AppCompatRadioButton
              android:id="@+id/rb_user_details_gender_male"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/default_space_none"
              android:layout_marginRight="@dimen/default_space"
              android:layout_weight="1"
              android:text="@string/user_details_gender_male"
              style="@style/CustomRadioButton"
              />
          <android.support.v7.widget.AppCompatRadioButton
              android:id="@+id/rb_user_details_gender_female"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/default_space"
              android:layout_marginRight="@dimen/default_space"
              android:layout_weight="1"
              android:text="@string/user_details_gender_female"
              style="@style/CustomRadioButton"
              />
        </RadioGroup>
        <RelativeLayout
            android:id="@+id/rl_user_profile_birthday"
            android:layout_width="@dimen/default_space_none"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_space_small"
            android:layout_marginStart="@dimen/default_space_small"
            android:layout_marginTop="@dimen/default_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rg_user_details_select_gender"
            >
          <ImageView
              android:id="@+id/iv_user_details_calender"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignParentRight="true"
              android:layout_marginLeft="@dimen/default_pull_space_small"
              android:layout_marginStart="@dimen/default_pull_space_small"
              android:layout_marginTop="@dimen/default_space_small"
              android:contentDescription="@null"
              android:padding="@dimen/default_space_small"
              app:srcCompat="@drawable/ic_birthday"
              />
          <android.support.design.widget.TextInputLayout
              android:id="@+id/til_user_details_birthday"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              style="@style/Widget.Design.TextInputLayout"
              >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_user_details_birthday"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/iv_user_details_calender"
                android:layout_toStartOf="@id/iv_user_details_calender"
                android:focusable="false"
                android:hint="@string/user_details_birthday"
                android:maxLines="1"
                android:onClick="@{() -> presenter.onSelectBirthdayClick()}"
                android:paddingEnd="@dimen/default_space"
                android:paddingLeft="@dimen/default_space_tiny"
                android:paddingRight="@dimen/default_space"
                android:text="@{Util.getHumanReadableDate(userDetail.birthdayInMillis)}"
                style="@style/EditTextField"
                />
          </android.support.design.widget.TextInputLayout>

        </RelativeLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_user_details_phone_number"
            android:layout_width="@dimen/default_space_none"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_space_small"
            android:layout_marginStart="@dimen/default_space_small"
            android:layout_marginTop="@dimen/default_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_user_profile_birthday"
            style="@style/Widget.Design.TextInputLayout"
            >

          <android.support.design.widget.TextInputEditText
              android:id="@+id/tiet_user_details_phone_number"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:enabled="false"
              android:hint="@string/user_details_mobile_number"
              android:inputType="phone"
              android:singleLine="true"
              app:binding="@{userDetail.phoneNumber}"
              style="@style/EditTextField"
              />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_user_details_email"
            android:layout_width="@dimen/default_space_none"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_space_small"
            android:layout_marginStart="@dimen/default_space_small"
            android:layout_marginTop="@dimen/default_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_user_details_phone_number"
            style="@style/Widget.Design.TextInputLayout"
            >

          <android.support.design.widget.TextInputEditText
              android:id="@+id/tiet_user_details_email"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/user_details_email"
              android:inputType="textEmailAddress"
              app:binding="@{userDetail.email}"
              style="@style/EditTextField"
              />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_user_details_country"
            android:layout_width="@dimen/default_space_none"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_space_small"
            android:layout_marginStart="@dimen/default_space_small"
            android:layout_marginTop="@dimen/default_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_user_details_email"
            style="@style/Widget.Design.TextInputLayout"
            >

          <android.support.design.widget.TextInputEditText
              android:id="@+id/tiet_user_details_country"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:enabled="false"
              android:hint="@string/user_details_country"
              android:inputType="text"
              app:binding="@{userDetail.country}"
              style="@style/EditTextField"
              />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_user_details_address"
            android:layout_width="@dimen/default_space_none"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_space_small"
            android:layout_marginStart="@dimen/default_space_small"
            android:layout_marginTop="@dimen/default_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_user_details_country"
            style="@style/Widget.Design.TextInputLayout"
            >

          <android.support.design.widget.TextInputEditText
              android:id="@+id/tiet_user_details_address"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/user_details_address_area_and_street"
              android:inputType="text|textMultiLine"
              android:maxLength="@integer/user_details_address_max_length"
              android:maxLines="2"
              app:binding="@{userDetail.address}"
              style="@style/EditTextField"
              />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_user_details_landmark"
            android:layout_width="@dimen/default_space_none"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_space_small"
            android:layout_marginStart="@dimen/default_space_small"
            android:layout_marginTop="@dimen/default_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_user_details_address"
            style="@style/Widget.Design.TextInputLayout"
            >

          <android.support.design.widget.TextInputEditText
              android:id="@+id/tiet_user_details_landmark"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/user_details_landmark_optional"
              android:inputType="text"
              app:binding="@{userDetail.landMark}"
              style="@style/EditTextField"
              />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_user_details_pincode"
            android:layout_width="@dimen/default_space_none"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_space_small"
            android:layout_marginStart="@dimen/default_space_small"
            android:layout_marginTop="@dimen/default_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_user_details_landmark"
            style="@style/Widget.Design.TextInputLayout"
            >

          <android.support.design.widget.TextInputEditText
              android:id="@+id/tiet_user_details_pincode"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/user_details_pincode"
              android:inputType="number|numberDecimal"
              app:binding="@{userDetail.pinCode}"
              style="@style/EditTextField"
              />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_user_details_city"
            android:layout_width="@dimen/default_space_none"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_space_small"
            android:layout_marginStart="@dimen/default_space_small"
            android:layout_marginTop="@dimen/default_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_user_details_pincode"
            style="@style/Widget.Design.TextInputLayout"
            >

          <android.support.design.widget.TextInputEditText
              android:id="@+id/tiet_user_details_city"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:focusable="false"
              android:hint="@string/user_details_city"
              android:inputType="text|number|numberDecimal"
              android:onClick="@{() -> presenter.onSelectCityClick()}"
              app:binding="@{userDetail.city}"
              style="@style/EditTextField"
              />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_user_details_state"
            android:layout_width="@dimen/default_space_none"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_space_small"
            android:layout_marginStart="@dimen/default_space_small"
            android:layout_marginTop="@dimen/default_space"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_user_details_city"
            style="@style/Widget.Design.TextInputLayout"
            >

          <android.support.design.widget.TextInputEditText
              android:id="@+id/tiet_user_details_state"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:enabled="false"
              android:hint="@string/user_details_state"
              android:inputType="text"
              app:binding="@{userDetail.state}"
              style="@style/EditTextField"
              />

        </android.support.design.widget.TextInputLayout>

      </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_details_action_button_height"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/default_space_small"
        app:layout_behavior="com.udacity.nanodegree.blooddonation.util.ViewMoveUpBehavior"
        >
      <com.udacity.nanodegree.blooddonation.ui.view.CircularMorphLayout
          android:id="@+id/cml_create_account"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >
        <TextView
            android:id="@+id/tv_create_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_button_square_corner"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="@{() -> presenter.onCreateNowClick(userDetail)}"
            android:text="@string/user_details_action_create_account"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            />
      </com.udacity.nanodegree.blooddonation.ui.view.CircularMorphLayout>
      <ProgressBar
          android:id="@+id/pb_create_account"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:visibility="gone"
          style="@style/Widget.AppCompat.ProgressBar"
          />
    </RelativeLayout>
  </android.support.design.widget.CoordinatorLayout>
</layout>